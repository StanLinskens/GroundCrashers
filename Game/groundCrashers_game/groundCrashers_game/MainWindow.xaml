<Window x:Class="groundCrashers_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:groundCrashers_game"
        mc:Ignorable="d"
        Title="Ground Crashers" Height="600" Width="900"
        FontFamily="Bahnschrift">
    <Grid>
        <!-- Main layout with three rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- Environment/Status Bar -->
            <RowDefinition Height="*"/>
            <!-- Main Game Area -->
            <RowDefinition Height="200"/>
            <!-- Player Controls Area -->
        </Grid.RowDefinitions>

        <!-- Environment and Status Bar -->
        <Border Grid.Row="0" Background="#E0E0E0" BorderBrush="#808080" BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Time of Day Indicator -->
                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Time" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Border Width="50" Height="50" Background="White" BorderBrush="Black" BorderThickness="1" Margin="5">
                        <TextBlock x:Name="TimeIcon" Text="☀️" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock x:Name="TimeText" Text="Day" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Weather Indicator -->
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Weather" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Border Width="50" Height="50" Background="White" BorderBrush="Black" BorderThickness="1" Margin="5">
                        <TextBlock x:Name="WeatherIcon" Text="☁️" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock x:Name="WeatherText" Text="Cloudy" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Terrain Type -->
                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Terrain" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Border Width="50" Height="50" Background="White" BorderBrush="Black" BorderThickness="1" Margin="5">
                        <TextBlock x:Name="TerrainIcon" Text="🌱" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock x:Name="TerrainText" Text="Grassland" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Battle Round -->
                <StackPanel Grid.Column="3" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Round" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Border Width="50" Height="50" Background="White" BorderBrush="Black" BorderThickness="1" Margin="5">
                        <TextBlock x:Name="RoundNumber" Text="1" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Game Area with opponent and scene -->
        <Grid Grid.Row="1" Background="#DDEFFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Scene/Environment Background -->
            <Image Grid.ColumnSpan="2" Stretch="Fill" Opacity="0.5"/>

            <!-- Opponent Info -->
            <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
                <TextBlock Text="Opponent" FontWeight="Bold" FontSize="16"/>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="HP:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Grid Grid.Column="1">
                        <ProgressBar x:Name="OpponentHealthBar" Height="20" Value="75" Maximum="100" Foreground="#FF0000" Background="#DDDDDD"/>
                        <TextBlock Text="75/100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Grid>

                <!-- Opponent Character Image -->
                <Border Width="150" Height="150" Background="White" BorderBrush="Black" BorderThickness="2" Margin="0,10,0,0" HorizontalAlignment="Center">
                    <Image x:Name="OpponentImage"  Stretch="Uniform"/>
                </Border>

                <TextBlock x:Name="OpponentStatus" Text="Status: Normal" Margin="0,5,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Player Controls Area -->
        <GroupBox Grid.Row="2" Header="Player" Margin="10" FontFamily="Bahnschrift">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Player Image -->
                <Border Grid.Column="0" Width="120" Height="120" Background="White" BorderBrush="Black" BorderThickness="2" Margin="5" HorizontalAlignment="Center">
                    <Image x:Name="PlayerImage" Stretch="Uniform"/>
                </Border>

                <!-- Player Stats and Controls -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Player Name and Level -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Character Name" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text=" - Level 10" FontSize="16" Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Health Bar -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="HP:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
                        <Grid Grid.Column="1">
                            <ProgressBar x:Name="PlayerHealthBar" Height="20" Value="85" Maximum="100" Foreground="#FF0000" Background="#DDDDDD"/>
                            <TextBlock Text="85/100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>

                    <!-- Action Buttons -->
                    <UniformGrid Grid.Row="2" Rows="2" Columns="2">
                        <Button x:Name="AttackButton" Content="Attack" Margin="5" Padding="10" Background="#FFD700" BorderBrush="#CC9900" BorderThickness="2">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="SpecialAttackButton" Content="Special Attack" Margin="5" Padding="10" Background="#FF6347" BorderBrush="#CC3300" BorderThickness="2">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="DefenseButton" Content="Defense" Margin="5" Padding="10" Background="#4682B4" BorderBrush="#27496D" BorderThickness="2">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="ItemButton" Content="Use Item" Margin="5" Padding="10" Background="#32CD32" BorderBrush="#228B22" BorderThickness="2">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </UniformGrid>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>