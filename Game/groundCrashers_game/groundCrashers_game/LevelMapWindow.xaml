<Window x:Class="groundCrashers_game.LevelMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Level Map" Height="1080" Width="1920"
        Background="SkyBlue"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Canvas>
        <!-- Paths (Lines between biomes) -->
        <Line X1="100" Y1="250" X2="550" Y2="140" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="500" Y1="150" X2="740" Y2="350" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="740" Y1="350" X2="1100" Y2="150" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="740" Y1="350" X2="250" Y2="550" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="1100" Y1="150" X2="1400" Y2="350" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="1400" Y1="350" X2="1700" Y2="150" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="1400" Y1="350" X2="1300" Y2="650" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="1300" Y1="650" X2="1600" Y2="850" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="1300" Y1="650" X2="900" Y2="750" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="900" Y1="750" X2="500" Y2="700" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="500" Y1="700" X2="250" Y2="500" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="200" Y1="800" X2="550" Y2="700" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="1300" Y1="1000" X2="1600" Y2="850" Stroke="Black" StrokeThickness="3" StrokeDashArray="4 2"/>


        <!-- Forest Biome -->
        <Border Canvas.Left="50" Canvas.Top="180" Width="150" Height="130" Background="#A8D5BA" CornerRadius="10" BorderBrush="Green" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🌲 Forest" FontSize="18" FontWeight="Bold" Foreground="DarkGreen" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Verdant, Nature - 15% attack boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Fire, Synthetic - 10% speed drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <!-- Desert Biome -->
        <Border Canvas.Left="425" Canvas.Top="82" Width="150" Height="130" Background="#F7DC6F" CornerRadius="10" BorderBrush="Goldenrod" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🏜️ Desert" FontSize="18" FontWeight="Bold" Foreground="DarkGoldenrod" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Fire, Earth - 15% accuracy boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Water, Nature - 12% defense drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <!-- Mountain Biome -->
        <Border Canvas.Left="682" Canvas.Top="286" Width="150" Height="130" Background="#B0C4DE" CornerRadius="10" BorderBrush="Gray" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🏔️ Mountain" FontSize="18" FontWeight="Bold" Foreground="SlateGray" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Primal, Wind - 20% defense boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Electric, Acid - 10% attack drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <!-- Highlands Biome -->
        <Border Canvas.Left="225" Canvas.Top="476" Width="150" Height="130" Background="#D5F5E3" CornerRadius="10" BorderBrush="ForestGreen" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🏞️ Highlands" FontSize="18" FontWeight="Bold" Foreground="DarkOliveGreen" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Wind, Avian - 15% speed boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Earth, Aquatic - 10% accuracy drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <!-- Glacier Biome -->
        <Border Canvas.Left="475" Canvas.Top="667" Width="150" Height="130" Background="#D6EAF8" CornerRadius="10" BorderBrush="SteelBlue" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="❄️ Glacier" FontSize="18" FontWeight="Bold" Foreground="DarkSlateGray" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Ice, Water - 20% defense boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Fire, Acid - 15% speed drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <Border Canvas.Left="150" Canvas.Top="732" Width="150" Height="130" Background="SandyBrown" CornerRadius="10" BorderBrush="SteelBlue" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="♻ Wasteland" FontSize="18" FontWeight="Bold" Foreground="SaddleBrown" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: ??" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: ??" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <!-- Swamp Biome -->
        <Border Canvas.Left="1289" Canvas.Top="300" Width="150" Height="130" Background="#A3B18C" CornerRadius="10" BorderBrush="DarkOliveGreen" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🌿 Swamp" FontSize="18" FontWeight="Bold" Foreground="DarkGreen" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Toxic, Aquatic - 15% defense boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Light, Sapient - 12% speed drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <!-- Ocean Biome -->
        <Border Canvas.Left="1214" Canvas.Top="585" Width="150" Height="130" Background="#A2D9F7" CornerRadius="10" BorderBrush="DarkBlue" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🌊 Ocean" FontSize="18" FontWeight="Bold" Foreground="Navy" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Water, Electric - 20% attack boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Earth, Terrestrial - 15% defense drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <!-- Volcano Biome -->
        <Border Canvas.Left="1018" Canvas.Top="106" Width="150" Height="130" Background="#F5B7B1" CornerRadius="10" BorderBrush="DarkRed" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🌋 Volcano" FontSize="18" FontWeight="Bold" Foreground="DarkRed" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Fire, Earth - 25% attack boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Ice, Water - 15% health drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <!-- Savanna Biome -->
        <Border Canvas.Left="1610" Canvas.Top="106" Width="150" Height="130" Background="#F4D03F" CornerRadius="10" BorderBrush="Goldenrod" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🌾 Savanna" FontSize="18" FontWeight="Bold" Foreground="DarkGoldenrod" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Primal, Light - 15% speed boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Dark, Ice - 10% accuracy drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <!-- Jungle Biome -->
        <Border Canvas.Left="1535" Canvas.Top="794" Width="150" Height="130" Background="#2ECC71" CornerRadius="10" BorderBrush="DarkGreen" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🌳 Jungle" FontSize="18" FontWeight="Bold" Foreground="DarkGreen" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Nature, Apex - 15% evasion boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Draconic, Magnetic - 10% accuracy drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5" />
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <!-- Tundra Biome -->
        <Border Canvas.Left="829" Canvas.Top="691" Width="150" Height="130" Background="#B4E1F9" CornerRadius="10" BorderBrush="RoyalBlue" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="❄️ Tundra" FontSize="18" FontWeight="Bold" Foreground="MidnightBlue" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: Ice, Draconic - 15% defense boost" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: Fire, Toxic - 12% attack drop" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5"/>
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <Border Canvas.Left="1200" Canvas.Top="900" Width="150" Height="130" Background="#B4E1F9" CornerRadius="10" BorderBrush="RoyalBlue" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="💧 marsh" FontSize="18" FontWeight="Bold" Foreground="MidnightBlue" HorizontalAlignment="Center"/>
                <TextBlock Text="Buff: ??" FontSize="14" HorizontalAlignment="Center"/>
                <TextBlock Text="Debuff: ??" FontSize="14" HorizontalAlignment="Center"/>
                <Button Content="Level 1" Width="100" Margin="5"/>
                <Button Content="Level 2" Width="100" Margin="5" />
            </StackPanel>
        </Border>

        <Button Content="Exit" Width="114" BorderThickness="3" BorderBrush="DarkRed" Foreground="White" Background="Red" Height="96" Canvas.Left="5" Canvas.Top="5" Click="Button_Click"/>

    </Canvas>
</Window>
