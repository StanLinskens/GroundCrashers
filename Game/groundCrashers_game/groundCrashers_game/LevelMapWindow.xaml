                   VerticalAlignment="Top"
                   Margin="0,8,0,0"
                   MouseEnter="ForestChooseBtn_Click"/>

                <Popup x:Name="ForestPopup"
               PlacementTarget="{Binding ElementName=ForestChooseBtn}"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True">
                    <Border Background="#1E1E1E"
                    BorderBrush="#444444"
                    BorderThickness="2"
                    CornerRadius="6"
                    Padding="6">
                        <StackPanel>
                            <Button Content="Level 1" Style="{StaticResource DarkButton}" Margin="0,4,0,0" Width="100"/>
