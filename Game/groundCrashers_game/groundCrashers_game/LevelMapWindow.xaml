        <Line X1="1400" Y1="350" X2="1700" Y2="150" Stroke="White" StrokeThickness="3" StrokeDashArray="4 2"/>
        <Line X1="1400" Y1="350" X2="1300" Y2="650" Stroke="White" StrokeThickness="3" StrokeDashArray="4 2"/>
