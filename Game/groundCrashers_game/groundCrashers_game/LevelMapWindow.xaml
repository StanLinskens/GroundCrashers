                    <Popup x:Name="AsteroidsPopup" PlacementTarget="{Binding ElementName=AsteroidsChooseBtn}" Placement="Bottom" Width="150" StaysOpen="False" AllowsTransparency="True">
                        <Border Background="#1E1E1E" BorderBrush="#444444" BorderThickness="2" CornerRadius="6" Padding="6">
                            <StackPanel>
                                <Button x:Name="AsteroidsLVL1" Content="Level 1" Style="{StaticResource DarkButton}" Margin="0,4,0,0" Width="100" Click="Start_Click"/>
                                <Button x:Name="AsteroidsLVL2" Content="Level 2" Style="{StaticResource DarkButton}" Margin="0,4,0,0" Width="100" Click="Start_Click"/>
                                <Button x:Name="AsteroidsLVL3" Content="Level 3" Style="{StaticResource DarkButton}" Margin="0,4,0,0" Width="100" Click="Start_Click"/>
                            </StackPanel>
                        </Border>
                    </Popup>
                </Grid>
            </Border>

            <!-- Exit Button -->
            <Button Content="Exit"
                    FontSize="16"
                    Width="75"
                    Height="50"
                    Canvas.Left="5"
                    Canvas.Top="5"
                    Style="{StaticResource DarkButton}"
                    Click="Button_Click"/>

            <!-- Exit Button -->
            <Button x:Name="capsuleBtn"
                    Content="capsule"
                    FontSize="16"
                    Width="75"
                    Height="50"
                    Canvas.Left="5"
                    Canvas.Top="60"
                    Style="{StaticResource DarkButton}"
                    Click="CapsuleBtn_Click"/>
        </Canvas>
    </Viewbox>
</Window>