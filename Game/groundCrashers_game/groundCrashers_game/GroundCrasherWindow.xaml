<Window x:Class="groundCrashers_game.GroundCrasherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:groundCrashers_game"
        mc:Ignorable="d"
        Title="Choose Your GroundCrasher" Height="450" Width="800"
        Loaded="Window_Loaded">

    <Grid Background="MediumPurple">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Selected Pokémon -->
        <Border Grid.Column="0" Margin="20,10,20,10" Background="BlueViolet" CornerRadius="10" BorderBrush="DarkMagenta" BorderThickness="4">
            <StackPanel Margin="10">
                <TextBlock Text="Selected GroundCrasher" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />

                <Rectangle Height="100" Fill="LightGray" Margin="0,0,0,10"/>
                <!-- Placeholder for image -->
                <TextBlock  Text="Name: " FontSize="16" Foreground="White" HorizontalAlignment="Left"/>
                <TextBlock Name="GroundCrasherName"  Text="N/A" FontSize="16" Foreground="White"/>
                <TextBlock Text="Type:" FontSize="16" Foreground="White"/>
                <TextBlock Name="GroundCrasherType"  Text="N/A" FontSize="16" Foreground="White"/>
                <TextBlock Text="HP: " FontSize="16" Foreground="White"/>
                <TextBlock Name="GroundCrasherHP"  Text="N/A" FontSize="16" Foreground="White"/>
                <TextBlock Text="Attack: " FontSize="16" Foreground="White"/>
                <TextBlock Name="GroundCrasherAttack"  Text="N/A" FontSize="16" Foreground="White"/>
                <TextBlock Text="Defense: " FontSize="16" Foreground="White"/>
                <TextBlock Name="GroundCrasherDefense"  Text="N/A" FontSize="16" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Right Panel: Pokémon List -->
        <Border Grid.Column="1" Margin="20,10,20,10" Background="BlueViolet" CornerRadius="10" BorderBrush="DarkMagenta" BorderThickness="4">
            <ScrollViewer>
                <StackPanel x:Name="CreatureButtonPanel" Margin="10">
                    <TextBlock Text="Choose Your GroundCrasher" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" />

                    <!-- Repeat this for each GroundCrasher -->
                    <Button Content="Contcybor" Margin="5" Height="40" Background="Lavender" Click="SelectPokemon_Click"/>

                    <!-- Add more as needed -->
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
