<Window x:Class="groundCrashers_game.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Black">
    
    
    <Viewbox Stretch="Uniform">
        <Grid Width="1920" Height="1080">
            <!-- Battle Background -->
            <Grid.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Images\battle_arena.png"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>

            <!-- Enemy Info -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="40,20,0,20">
                <TextBlock Text="enemy" FontWeight="Bold" FontSize="32" VerticalAlignment="Center" Background="LightGray" Foreground="Black"/>
                <ProgressBar Width="300" Height="30" Value="60" Maximum="100" Margin="20,0,0,0" Foreground="OrangeRed" VerticalAlignment="Center"/>
                <TextBlock Text="89/89" FontSize="24" Margin="20,0,0,0" VerticalAlignment="Center" Background="LightGray" Foreground="Black"/>
            </StackPanel>

            <!-- Battle Area -->
            <Grid Grid.Row="1">
                <Canvas>
                    <Ellipse Width="300" Height="60" Fill="DarkGreen" Canvas.Left="200" Canvas.Top="500"/>
                    <Ellipse Width="300" Height="60" Fill="DarkGreen" Canvas.Left="1300" Canvas.Top="100"/>
                    <TextBlock Text="enemy" FontSize="28" Canvas.Left="1350" Background="LightGray" Foreground="Black"/>
                    <TextBlock Text="player" FontSize="28" Canvas.Left="250" Canvas.Top="460" Background="LightGray" Foreground="Black"/>
                </Canvas>
            </Grid>

            <!-- Player Info -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="40,20" HorizontalAlignment="Right">
                <TextBlock Text="you" FontWeight="Bold" FontSize="32" VerticalAlignment="Center" Background="LightGray" Foreground="Black"/>
                <ProgressBar Width="300" Height="30" Value="89" Maximum="89" Margin="20,0,0,0" Foreground="GreenYellow" VerticalAlignment="Center"/>
                <TextBlock Text="89/89" FontSize="24" Margin="20,0,0,0" VerticalAlignment="Center" Background="LightGray" Foreground="Black"/>
            </StackPanel>

            <!-- Options Menu -->
            <Grid Grid.Row="3" Background="LightGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="choose action" HorizontalAlignment="Center" FontSize="28" VerticalAlignment="Center" Grid.Column="0" Foreground="Black"/>
                <WrapPanel Grid.Column="1" HorizontalAlignment="Right" Margin="40,0,0,0" VerticalAlignment="Center">
                    <Button Content="FIGHT" Height="60" Width="500" Margin="10" Background="LightCoral" BorderThickness="4" BorderBrush="Red" FontSize="20" Click="Fight_Button_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="30"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="BAG" Height="60" Width="500" Margin="10" Background="Orange" BorderThickness="4" BorderBrush="Yellow" FontSize="20" Click="Bag_Button_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="30"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="GroundCrashers" Height="60" Width="500" Margin="10" Background="LightGreen" BorderThickness="4" BorderBrush="DarkGreen" FontSize="20" Click="GroundCrashers_Button_Click_2">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="30"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="RUN" Height="60" Width="500" Margin="10" Background="LightBlue" BorderThickness="4" BorderBrush="DarkBlue" FontSize="20" Click="Run_Button_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="30"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </WrapPanel>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
